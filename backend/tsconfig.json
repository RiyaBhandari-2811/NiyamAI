{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "Node",
      "rootDir": "src",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "declaration": false,
      "sourceMap": false
    },
    "ts-node": {
      "esm": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  